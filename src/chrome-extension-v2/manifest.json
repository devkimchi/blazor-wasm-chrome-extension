{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Getting Started Example (Chrome Original)",
  "description": "Build an Extension!",

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],

  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },

  "options_page": "options.html"
}